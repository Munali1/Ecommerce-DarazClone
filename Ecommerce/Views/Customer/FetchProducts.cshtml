@model List<Product>
<div class="container mt-5">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("ProductDetails","Customer",new{id=product.Id})">
                <div class="card h-100">
                    <img src="@Url.Content("~/product_image/" + @product.Image)" asp-append-version="true" height="100px" width="100px" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6 class="card-price">Price: $@product.Price</h6>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                            <form method="post" asp-action="AddToCart">
                                <input type="hidden" value="@product.Id" name="Product_ID" />
                                <input class="btn btn-primary"type="submit" value="Add To Cart" />
                            </form>
               
                        
                    </div>
                    
                    
                </div>
                </a>
            </div>
        }
    </div>
</div>
<style>
.card {
    border: 1px solid #ddd; /* Light border around the card */
    border-radius: 5px; /* Rounded corners */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    overflow: hidden; /* Ensure content does not overflow */
    transition: transform 0.2s; /* Smooth hover effect */
}

.card:hover {
    transform: translateY(-5px); /* Lift card on hover */
}

.card-img-top {
    width: 100%; /* Full width image */
    height: auto; /* Maintain aspect ratio */
    object-fit: cover; /* Ensure image covers the card top */
}

.card-title {
    font-size: 1.25rem; /* Larger font size for product name */
    margin-bottom: 10px; /* Space below the title */
}

.card-price {
    font-size: 1.1rem; /* Slightly larger font for price */
    font-weight: bold; /* Bold text for price */
    color: #28a745; /* Green color for price */
    margin-bottom: 15px; /* Space below the price */
}

.card-footer {
    background-color: #f8f9fa; /* Light background for footer */
    border-top: 1px solid #ddd; /* Light border at the top */
    padding: 10px 15px; /* Padding inside footer */
}

.btn {
    flex: 1; /* Buttons take equal space */
    margin: 0 5px; /* Space between buttons */
    text-align: center; /* Center text inside buttons */
}
</style>
