@model Product

<div class="container-fluid px-4 mb-3">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Update Product</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="text" name="Name" class="form-control mb-3" placeholder="Product Name" value="@Model.Name" />
            <input type="text" name="Price" class="form-control mb-3" placeholder="Product Price" value="@Model.Price" />
            <input type="text" name="Description" class="form-control mb-3" placeholder="Product Description" value="@Model.Description" />
            @Html.Partial("CategoryDropdown", ViewData["category"])

            <div class="mb-3">
                <label>Current Image</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Url.Content("~/product_image/" + Model.Image)" height="100px" width="100px" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>

            <div class="mb-3">
                <label>Upload New Image (optional)</label>
                <input type="file" name="Image" class="form-control" />
                <input type="hidden" name="ExistingImage" value="@Model.Image" />
            </div>

            <input type="submit" value="Update Product" class="btn btn-primary mb-3" />
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
