@model Category
<div class="container-fluid px-4 mb-3">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Update Category</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <input type="text" name="category_Name" class="form-control mb-3" value="@Model.category_Name" />
            <input type="submit" value="Update Category" class="btn btn-primary mb-3" />
        </form>
    </div>
    <div class="col-md-2"></div>

</div>
